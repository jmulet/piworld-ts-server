{
  "name": "piworld-ts-server",
  "version": "1.0.0",
  "description": "Server for piworld site based on nodejs + springjs",
  "main": "index.js",
  "scripts": {
    "serve": "ts-node-dev --respawn --ignore-watch node_modules,src/trash,src/main.app/tests src/index.ts",
    "stopserve": "killall ts-node-dev",
    "precompile": "rm -fr dist/*",
    "compile": "tsc -p .",
    "views": "cp -r ./src/views ./dist/ && cp -r ./src/admin.app/views ./dist/admin.app && cp -r ./src/classroom.app/views ./dist/classroom.app && && cp -r ./src/main.app/views ./dist/main.app",
    "build": "npm run compile && npm run views",
    "start": "cd dist && node index.js",
    "test": "ts-mocha ./tests/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmulet/piworld-ts-server.git"
  },
  "keywords": [
    "server",
    "typescript",
    "springjs",
    "mvc",
    "piworld"
  ],
  "author": "Josep Mulet",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jmulet/piworld-ts-server/issues"
  },
  "homepage": "https://github.com/jmulet/piworld-ts-server#readme",
  "dependencies": {
    "async": "^2.6.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "class-validator": "^0.8.1",
    "colors": "^1.1.2",
    "compression": "^1.7.1",
    "connect-memcached": "^0.2.0",
    "consolidate": "^0.15.0",
    "crypto-js": "^3.1.9-1",
    "dateformat": "^3.0.2",
    "ejs": "^2.5.7",
    "ejson": "^2.1.2",
    "es6-shim": "^0.35.3",
    "excel4node": "^1.2.1",
    "express-pw": "^4.16.3",
    "express-session": "^1.15.6",
    "express-socket.io-session": "^1.3.2",
    "express-winston": "^2.4.0",
    "helmet": "^3.9.0",
    "memorystore": "^1.6.0",
    "method-override": "^2.3.10",
    "multer": "^1.3.0",
    "mysql2": "^1.5.3",
    "nodemailer": "^4.4.0",
    "pm2": "^2.9.1",
    "q": "^1.5.1",
    "reflect-metadata": "^0.1.10",
    "routing-controllers": "^0.7.6",
    "socket.io": "^2.0.4",
    "typedi": "^0.6.0",
    "typeorm": "next",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.46",
    "@types/chai": "^4.1.2",
    "@types/chai-http": "^3.0.4",
    "@types/consolidate": "^0.0.33",
    "@types/dateformat": "^1.0.1",
    "@types/express": "^4.11.0",
    "@types/express-session": "^1.15.6",
    "@types/jwt-simple": "^0.5.33",
    "@types/method-override": "0.0.31",
    "@types/mocha": "^2.2.48",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^8.5.2",
    "@types/nodemailer": "^4.3.0",
    "@types/socket.io": "^1.4.31",
    "@types/winston": "^2.3.7",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "eslint": "^4.16.0",
    "mocha": "^5.0.1",
    "ts-mocha": "^1.1.0",
    "ts-node-dev": "^1.0.0-pre.9",
    "tslint": "^5.8.0",
    "typeorm-model-generator": "^0.2.3",
    "typings": "^2.1.1"
  }
}
