<!DOCTYPE html>
<html lang="<%=lang%>">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="icon" href="<%-prefixUrl('/favicon.ico')%>" type="image/x-icon">
  <title>piWorld</title>
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link href="<%-prefixUrl('/desktop.'+config.version+'.bundle.css')%>" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  <style>
  .wrapper, body, html {
    height: 100%;
    overflow: hidden;
    background: grey;
  } 
  </style>
</head>

<body class="hold-transition sidebar-mini" style="margin-top:60px">
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand bg-white navbar-light border-bottom fixed-top">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#">
            <i class="fa fa-bars"></i>
          </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
          <a href="#" class="nav-link" data-goapp="desktop">Home</a>
        </li> 
      </ul>

      <!-- SEARCH FORM -->
      <!--
      <form class="form-inline ml-3">
        <div class="input-group input-group-sm">
          <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
          <div class="input-group-append">
            <button class="btn btn-navbar" type="submit">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    -->
      <!-- Right navbar links -->
      <ul class="navbar-nav ml-auto">
        <!-- Language picker -->
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
              <i class=""><img src="assets/img/<%=lang%>.png"/></i>
              <span><%=lang%></span>
            </a>
            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
              <span class="dropdown-item dropdown-header">Language</span>
              <div class="dropdown-divider"></div>
              <% ["es", "ca", "en"].forEach( function(idioma) { %>
              <a href="#" class="dropdown-item" data-lang="<%=idioma%>">
                <i class="icon-wide"> <img src="assets/img/<%=idioma%>.png"/></i> 
                <span><%=idioma%></span>             
              </a>
              <% }) %>
          </li>

        <!-- Onlineusers Dropdown Menu -->
        <li class="nav-item dropdown">
          <a class="nav-link" data-toggle="dropdown" href="#">
            <i class="fa fa-users"></i>
            <span class="badge badge-danger navbar-badge" id="onlineCount"></span>
          </a>
          <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" id="onlineList" style="max-height:500px; overflow-y:auto;">            
            <a href="#" class="dropdown-item dropdown-footer" id="onlineTitle">Users online</a>
            <a href="#" class="dropdown-item dropdown-footer" id="onlineSeeAll">See All</a>
          </div>
        </li>
        <!-- Notifications Dropdown Menu -->
        <li class="nav-item dropdown">
          <a class="nav-link" data-toggle="dropdown" href="#">
            <i class="fa fa-bell-o"></i>
            <span class="badge badge-warning navbar-badge">15</span>
          </a>
          <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            <span class="dropdown-item dropdown-header">15 Notifications</span>
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item">
              <i class="fa fa-envelope icon-wide"></i> 4 new messages
              <span class="float-right text-muted text-sm">3 mins</span>
            </a>
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item">
              <i class="fa fa-users icon-wide"></i> 8 friend requests
              <span class="float-right text-muted text-sm">12 hours</span>
            </a>
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item">
              <i class="fa fa-file icon-wide"></i> 3 new reports
              <span class="float-right text-muted text-sm">2 days</span>
            </a>
            <div class="dropdown-divider"></div>
            <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
          </div>
        </li>
        <!--user menu-->
        <li class="nav-item dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
              <img src="assets/img/avatar/<%=user.uopts.avatar||0%>.png" class="img-circle" alt="User Image">
              <span class="hidden-xs"><%=user.username%></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <span class="dropdown-item dropdown-header"><small><%=user.fullname%></small></span>
                <div class="dropdown-divider"></div>
                <a id="avatar" href="#" class="dropdown-item">
                  <i class="fa fa-users icon-wide"></i> Avatar
                  <span class="float-right text-muted text-sm"></span>
                </a>
                <a id="profile" href="#" class="dropdown-item">
                    <i class="fa fa-cogs icon-wide"></i> Profile
                    <span class="float-right text-muted text-sm"></span>
                  </a>
                <div class="dropdown-divider"></div>
                <a id="logout" href="#" class="dropdown-item">
                  <i class="fa fa-sign-out icon-wide"></i> Logout
                  <span class="float-right text-muted text-sm"></span>
                </a>
            </ul>
          </li>

        <li class="nav-item">
          <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#">
            <i class="fa fa-th-large"></i>
          </a>
        </li>
      </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <%-include ./sidebar %>
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">      
      <!-- Content Header (Page header) 
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0 text-dark">Deskop</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item active">
                  Desktop
                </li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      -->
      <!-- Main content -->
      <div class="content" style="height:100%;width:100%;position:relative;overflow:hidden">
        <div style="height:100%;width:100%;position:relative;overflow:hidden">
          <div id="desktopcontent" class="container" style="overflow:auto; padding:50px">
            <h4>Welcome to
              <b>piWorld</b>,
              <%=user.fullname%>
            </h4>
            <br/>
            <center>
                <div id="newsCarousel" class="carousel slide" data-ride="carousel" style="background:lightgray; height: 400px;width:80%;">
                  <div class="carousel-inner">
                    <% newsCarousel.forEach( function(news, i) { %>
                    <div class="carousel-item <%= i===0? 'active':'' %>">
                     <center  class="d-block w-100">
                        <%- news.html %>
                     </center>
                    </div>                 
                    <% }) %>
                  </div>
                  <a class="carousel-control-prev" href="#newsCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#newsCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              </center>
          </div>
          <div id="iframe-container" style="height:100%;width:100%;margin:0px;position:relative;overflow:hidden">
          </div> 
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer fixed-bottom">
      <%- include ./footer %>
    </footer>

  </div>

    <%- include ../../views/partials/clientPwApp %>

    <script>
     var apps = <%-JSON.stringify(applications) %>;
    </script>
    <script src="<%-prefixUrl('desktop.'+config.version+'.bundle.js')%>"></script>
   <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>-->
  </body>
</body>

</html>



